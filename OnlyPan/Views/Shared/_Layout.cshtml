      <div class="navbar-collapse d-sm-inline-flex justify-content-between">
        <ul class="navbar-nav flex-grow-1">
          <li class="nav-item font-bold">
            <a class="nav-link text-black hover:bg-amber-600 hover:text-white rounded-md px-3 py-2 " asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
          </li>
          <li class="nav-item font-bold">
            <a class="nav-link text-black hover:bg-amber-600 hover:text-white rounded-md px-3 py-2" asp-area="" asp-controller="Home" asp-action="Bio">¿Quienes Somos?</a>
          </li>
        </ul>
      </div>

      @* Search Bar *@
      <form class="d-flex m-1.5 space-x-1.5" role="search">

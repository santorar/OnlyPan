        <button class="btn bg-green-600 btn-success text-white" type="submit">Buscar</button>
      </form>
      <!--Login buttons-->
      @if (Context.User.Identity is {IsAuthenticated: true })
      {
        <ul class="flex lg:flex-row sm:flex-col items-center space-x-1.5">
          <li class="nav-item">
            <a class="btn btn-primary bg-white text-blue-500" asp-area="" asp-controller="User" asp-action="Logout">Cerrar Sesión</a>
          </li>
        </ul>
      }

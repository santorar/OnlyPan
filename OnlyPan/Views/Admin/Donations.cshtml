@model List<OnlyPan.Models.ViewModels.AdminViewModels.DonationsViewModel>

<h1 class="uppercase font-bold my-3 text-center mt-5">Donaciones Pendientes</h1>

<div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
        <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
            <div class="overflow-hidden">

                <span class="alert-danger">@ViewBag.Error</span>
                <table class="table min-w-full text-left text-sm">
                    <thead class="border-b font-medium dark:border-neutral-500">
                        <tr>
                            <th scope="col" class="px-6 py-4">
                                Nombre de Usuario
                            </th>
                            <th scope="col" class="px-6 py-4">
                                Nombre del chef
                            </th>
                            <th scope="col" class="px-6 py-4">
                                Monto de la donaci贸n
                            </th>
                            <th scope="col" class="px-6 py-4">
                                Fecha de la donaci贸n
                            </th>
                            <th scope="col" class="px-6 py-4">
                                Acciones
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var donation in Model)
                        {
                            <tr class=" border-b transition duration-300 ease-in-out hover:bg-orange-200 dark:border-orange-200 dark:hover:bg-orange-200">
                                <td class="whitespace-nowrap px-6 py-4 font-medium">
                                    @Html.DisplayFor(m => donation.UserName)
                                </td>
                                <td class="whitespace-nowrap px-6 py-4">
                                    @Html.DisplayFor(m => donation.ChefName)
                                </td>
                                <td class="whitespace-nowrap px-6 py-4">
                                    @Html.DisplayFor(m => donation.Amount)
                                </td>
                                <td class="whitespace-nowrap px-6 py-4">
                                    @Html.DisplayFor(m => donation.Date)
                                </td>
                                <td class="whitespace-nowrap px-6 py-4">
                                    <a class="link-success space-x-1.5" asp-action="AcceptDonation" asp-controller="Admin"
                                       asp-route-donationId="@donation.DonationId">
                                        Aceptar Donaci贸n
                                    </a>
                                    <a class="link-danger space-x-1.5" asp-action="BlockDonation" asp-controller="Admin"
                                       asp-route-donationId="@donation.DonationId">
                                        Bloquear Donaci贸n
                                    </a>
                                </td>
                            </tr>
                        }
                        <span class="alert-danger">@ViewBag.Error</span>
                        <span class="alert-success">@ViewBag.Success</span>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@model OnlyPan.Models.ViewModels.RecipesViewModels.FeedViewModel
@if (Model.rolId > 1)
{
    <a asp-action="Create" class="btn btn-primary bg-blue-500 m-11 mb-0">Crear Receta</a>
}
 <div class = "grid lg:grid-cols-3 m-5 gap-2 max-w-7xl">
@foreach (var recipe in Model.RecipeFeedViewModels)
{
    <a asp-action="View" asp-controller="Recipes" asp-route-idRecipe="@recipe.IdRecipe">
            <div class="max-w-sm rounded overflow-hidden shadow-lg ">
               <div class ="flex justify-center align-center">
            <img class="img-thumbnail img-recipe flex justify-center align-center" style='max-height:170px;' src="data:image;base64,@Convert.ToBase64String(recipe.Photo!)" alt="imagen @recipe.Name"/>
                </div>
            <div class="px-6 py-4">
                <div class="font-bold text-xl mb-2"><h1 class="title uppercase">@recipe.Name</h1></div>
                <p class="text-gray-700 text-base">@recipe.Description</p>
            </div>
            <div class="px-6 pt-4 pb-2">
                <p class="disabled:text-gray-500">Valoracion General: @recipe.Rating</p>

            </div>
        </div>
    </a>


}
</div>

